      .resist--main__box__block
        .resist--main__box__block__pagination
          %li.resist--main__box__block__pagination__number 1
          %span.resist--main__box__block__pagination__bar ー
          %li.resist--main__box__block__pagination__color 2
          %span.resist--main__box__block__pagination__bar ー
          %li.resist--main__box__block__pagination__number 3
