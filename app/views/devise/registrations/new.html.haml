.resist--wrapper
  =render "/layouts/header"
  .resist--main
    .resist--main__box
      .resist--main__box__block
        .resist--main__box__block__pagination
          %li.resist--main__box__block__pagination__color 1
          %span.resist--main__box__block__pagination__bar ー
          %li.resist--main__box__block__pagination__number 2
          %span.resist--main__box__block__pagination__bar ー
          %li.resist--main__box__block__pagination__number 3
        .resist--main__box__block__title
          %head.resist--main__box__block__title__text 新規登録
        .resist--main__box__block__forms
          = form_for "#" do |f| 
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text ユーザー名 
              = f.email_field :email, class:"resist--main__box__block__forms__list__form", placeholder:"ユーザー名"
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text メールアドレス
              = f.text_field :username, class:"resist--main__box__block__forms__list__form", placeholder:"メールアドレス"
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text パスワード
              = f.text_field :password, class:"resist--main__box__block__forms__list__form", placeholder:"パスワード"
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text パスワード確認用
              = f.text_field :password, class:"resist--main__box__block__forms__list__form", placeholder:"パスワード確認用"
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text 生年月日
              != sprintf(f.date_select(:birthday, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),' 年 ',' 月 ')+'日'
            .resist--main__box__block__forms__one
              .resist--main__box__block__forms__list__text プロフィール画像
              %input.resist--main__box__block__forms__one__pic(type="file")
            .resist--main__box__block__forms__guideline
              %a.resist--main__box__block__forms__guideline__text(href="#") 利用規約
            .resist--main__box__block__forms__btn
              = link_to users_registrations_mail_check_path, class:'resist--main__box__block__forms__btn--link' do
                .resist--main__box__block__forms__btn__text 利用規約に同意して登録
  =render "/layouts/footer"