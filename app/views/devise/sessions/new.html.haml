.signup--wrapper
  .signup--main
    .signup__contents
      .signup__contents__box
        .signup__contents__box__title 
          .signup__contents__box__title--text 会員登録
        .signup__contents__box__sns
          %ul.signup__contents__box__sns__tab
            %li.signup__contents__box__sns__tab__one
              = link_to '#', class:'signup__contents__box__sns__tab__one__link' do
                -# = icon('fa', 'yahoo', class: '')
                .signup__contents__box__sns__tab__one--text Yahoo! JAPANIDでログインする
            %li.signup__contents__box__sns__tab__one
              = link_to '#', class:'signup__contents__box__sns__tab__one__link' do
                -# = icon('fa','facebook-official', class: '')
                .signup__contents__box__sns__tab__one--text Facebookでログインする
            %li.signup__contents__box__sns__tab__one
              = link_to '#', class:'signup__contents__box__sns__tab__one__link' do
                -# = icon('fa', 'google', class: '')
                .signup__contents__box__sns__tab__one--text Googleでログインする
            %li.signup__contents__box__sns__tab__one
              = link_to '#', class:'signup__contents__box__sns__tab__one__link' do
                -# = icon('fa', '', class: '') 
                .signup__contents__box__sns__tab__one--text LINEでログインする
        %p.signup__contents__box__bar - または -
        .signup__contents__box__mail
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.email_field :email, autofocus: true, autocomplete: "email", class:"signup__contents__box__mail__form", placeholder:"メールアドレス"
            = f.password_field :password, autocomplete: "current-password", class:"signup__contents__box__mail__form", placeholder:"パスワード"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
            .signup__contents__box__mail__block
              = f.submit "ログインする", class:'signup__contents__box__mail__block__btn'
        %p.signup__contents__box__bar - または -
        .signup__contents__box__login__block
